<div id="main" >
<div class="auto_t_r w960">
    <div class="auto_t_l">&nbsp;</div>
  <div class="auto_b_r"><div class="auto_b_l"> 
<table width="100%" border="0" cellspacing="0" cellpadding="3">
  <% form_for :product, :url => product_path(:id => @product), :html => {:multipart => true, :method => :put }  do |f| %>
    <%= f.error_messages %>
    <tr>
      <td width="24%" align="right"><font color="#FF0000">* </font>商品名称：</td>
      <td><span>
          <%= f.text_field :name, :size => 20, :maxlength => 50%>
        </span>
      </td>
    </tr>
    <% if logged_in_type == "Shop"%>
    <tr>
      <td align="right" valign="top"><font color="#FF0000">* </font>价格：</td>
      <td><%= f.text_field :price, :size => 10 %></td>
    </tr>
    <tr>
      <td align="right" valign="top">折扣价：</td>
      <td><%= f.text_field :discount, :size => 10 %>		</td>
      </tr>
      <tr>
      <td align="right">优惠说明：</td>
      <td>
        <%#= javascript_include_tag :fckeditor%>
        <%#= fckeditor_textarea ('product', 'offer_description', {:toolbarSet => 'Simple', :width => '150%', :height => '200px' }) %>
        <%= f.text_area :offer_description, :rows => 5, :cols => 50 %>
      </td>
    </tr>
  <% end %>
    <tr>
      <td align="right" ><font color="#FF0000">* </font>产品介绍：</td>
      <td>
        <%#= fckeditor_textarea ('product', 'introduction', {:toolbarSet => 'Simple', :width => '150%', :height => '200px' }) %>
        <%= f.text_area :introduction, :rows => 5, :cols => 50 %>
      </td>
    </tr>
    <tr>
      <td align="right">&nbsp;(<font color="#FF0000">*为必填项</font>)</td>
      <td>
        <%= submit_tag '提交' %>
        &nbsp;&nbsp;
        <%= link_to '取消', product_path(:id => @product) %>
      </td>
    </tr>
  <% end %>
</table>
</div>
<div class="clear"></div>
</div>
</div>
</div>
<div class="clear"></div>
