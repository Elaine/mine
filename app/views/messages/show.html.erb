  <div class="inputText">
    <%= f.text_area :content, :rows => 5, :cols => 40%>
    <br/>
    <%= f.hidden_field (:item_type, :value => "Info") %>
    <%= f.hidden_field (:item_id, :value => @info.id) %>
    <input name="switch" value="<%= info_path(:id => @info)%>" type="hidden">
    <%= submit_tag '提交' %>
  </div>
<% end %>
