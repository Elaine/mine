<div id="RemarkContent">
  <% @info.comments.each do |comment|%>
    <% if comment.space.avatar %>
      <%= image_tag(comment.space.avatar.public_filename(:tiny))%>
    <% else %>
      <%= image_tag("../images/noface_tiny.jpg") %>
    <% end %>
    <%= link_to comment.space.user.login_name, space_path(:id => comment.space)%>
    <%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S")%>
  <% end %>
</div>
