<div id="main">
  <div class="auto_t_r w960">
    <div class="auto_t_l">&nbsp;</div>
    <div class="auto_b_r"><div class="auto_b_l"> 
        <div class="left" style="width:600px; float:left;">
          <% form_for :shop, :url => shop_path, :html => {:method => :put, :multipart => true} do |f| %>
            <ul>
              <li class="left">账号：</li>
              <li class="right"> <%= f.text_field :login_name, :class => 'input'%> </li>
              <li class="left">密码：</li>
              <li class="right"> <%= f.password_field :password, :class => 'input'%> </li>
              <li class="left">确认密码：</li>
              <li class="right"> <%= f.password_field :password_confirmation, :class => 'input'%> </li>
              <li class="left">店铺名称：</li>
              <li class="right"> <%= f.text_field :shopname, :class => 'input'%> </li>
              <li class="left">店铺分类：</li>
              <li class="right"> <%= f.select :shop_category_id, ShopCategory.find(:all).map {|m| [m.name, m.id]}%> </li>
              <li class="left">店铺描述：</li>
              <li class="right"> <%= f.text_field :description, :class => 'input'%> </li>
              <li class="left">地址：</li>
              <li class="right"> <%= f.text_field :address, :class => 'input'%> </li>
              <li class="left">企业标志：</li>
              <li class="right"> <%= file_field :shop_photo, :uploaded_data %> </li>
              <li class="left"></li>
              <li class="butten"> <%= submit_tag '提交', :class => 'button'%> </li>
            </ul>
          <% end %>
        </div>
        <div class="clear"></div>
      </div>
    </div>
  </div>
  <div class="clear"></div>
</div>
